<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:persistent="false"
    tools:context=".settings.DownloadPreferenceFragment">

    <ListPreference
        android:defaultValue="@string/pref_total_download_cache_size_default_value"
        android:entries="@array/pref_total_download_cache_size_entries"
        android:entryValues="@array/pref_total_download_cache_size_entry_values"
        android:key="pref_key_total_download_cache_size"
        android:summary="%s"
        android:title="@string/pref_total_download_cache_size" />

    <PreferenceCategory
        android:persistent="false"
        android:title="@string/pref_avatar">

        <ListPreference
            android:defaultValue="@string/pref_avatars_download_strategy_default_value"
            android:entries="@array/pref_avatars_download_strategy_entries"
            android:entryValues="@array/pref_avatars_download_strategy_entry_values"
            android:key="pref_key_avatars_download_strategy"
            android:summary="%s"
            android:title="@string/pref_downloads" />

        <ListPreference
            android:defaultValue="@string/pref_avatar_resolution_strategy_default_value"
            android:entries="@array/pref_avatar_resolution_strategy_entries"
            android:entryValues="@array/pref_avatar_resolution_strategy_entry_values"
            android:key="pref_key_avatar_resolution_strategy"
            android:summary="%s"
            android:title="@string/pref_avatar_resolution" />

        <ListPreference
            android:defaultValue="@string/pref_avatar_cache_invalidation_interval_default_value"
            android:entries="@array/pref_avatar_cache_invalidation_interval_entries"
            android:entryValues="@array/pref_avatar_cache_invalidation_interval_entry_values"
            android:key="pref_key_avatar_cache_invalidation_interval"
            android:summary="%s"
            android:title="@string/pref_avatar_cache_invalidation_interval" />

    </PreferenceCategory>

    <PreferenceCategory
        android:persistent="false"
        android:title="@string/pref_image">

        <ListPreference
            android:defaultValue="@string/pref_images_download_strategy_default_value"
            android:entries="@array/pref_images_download_strategy_entries"
            android:entryValues="@array/pref_images_download_strategy_entry_values"
            android:key="pref_key_images_download_strategy"
            android:summary="%s"
            android:title="@string/pref_downloads" />

    </PreferenceCategory>

</PreferenceScreen>
