<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cl.monsoon.s1next.view.dialog.LoginCaptchaDialogFragment">

    <data>

        <variable
            name="captchaPicUrl"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dialog_padding_bottom"
        android:paddingEnd="@dimen/dialog_padding"
        android:paddingLeft="@dimen/dialog_padding"
        android:paddingRight="@dimen/dialog_padding"
        android:paddingStart="@dimen/dialog_padding"
        android:paddingTop="@dimen/dialog_padding">

        <ImageView
            android:id="@+id/captcha_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/captcha_content_desc"
            app:captchaPicUrl="@{captchaPicUrl}" />

        <EditText
            android:id="@+id/captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeActionId="@integer/ime_action_id"
            android:imeActionLabel="@string/action_login"
            android:inputType="text"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    </LinearLayout>

</layout>
